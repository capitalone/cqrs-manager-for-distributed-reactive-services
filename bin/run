set -e -x

cd "${0%/*}/.."

source /etc/profile

profiles=runtime

if [ -n "${LEIN_PROFILES}" ]; then
  profiles="${profiles},${LEIN_PROFILES}"
fi

exec java $JAVA_OPTS -cp "`lein with-profile ${profiles} classpath`" clojure.main -m "$@"
